<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/vencedor_light_blue">

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:id="@+id/lay_rel_img"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:padding="3dp"
        android:background="@drawable/circle">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/avatar_pordefecto"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/lblNombres2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juliana Perez"
        android:layout_marginBottom="4dp"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntaje"
        android:textSize="16sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/lblPuntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200"
        android:textSize="25sp"
        android:textColor="@color/vencedor_mustard_yellow"
        android:layout_marginBottom="16dp"/>

</LinearLayout>