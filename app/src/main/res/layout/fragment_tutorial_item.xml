<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vencedor_light_blue"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="¡Bienvenido,\nAndrés Castillo!"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <FrameLayout
            android:id="@+id/flImgTutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llBottomPart"
            android:layout_below="@+id/tvWelcome"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivPrev"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_left_white" />

                <ImageView
                    android:id="@+id/icoAyuda"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="32dp"
                    android:src="@drawable/ico_ayuda1" />

                <ImageView
                    android:id="@+id/ivNext"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/dot1"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_margin="4dp"
                        android:alpha="0.5"
                        android:background="@drawable/puntito" />

                    <ImageView
                        android:id="@+id/dot2"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_margin="4dp"
                        android:alpha="0.5"
                        android:background="@drawable/puntito" />

                    <ImageView
                        android:id="@+id/dot3"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_margin="4dp"
                        android:alpha="0.5"
                        android:background="@drawable/puntito" />

                    <ImageView
                        android:id="@+id/dot4"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_margin="4dp"
                        android:alpha="0.5"
                        android:background="@drawable/puntito" />

                    <ImageView
                        android:id="@+id/dot5"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_margin="4dp"
                        android:alpha="0.5"
                        android:background="@drawable/puntito" />

                </LinearLayout>

            </RelativeLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/llBottomPart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTextAyuda"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:lineSpacingExtra="5sp"
                android:paddingBottom="16dp"
                android:text="@string/label_tutorial_1"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnSaltar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/vencedor_mustard_yellow"
                android:text="Cerrar ayuda"
                android:textColor="@color/vencedor_green_gray" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>