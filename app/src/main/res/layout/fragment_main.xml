<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/vencedor_skin_background">

    <LinearLayout
        android:id="@+id/llMainBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        android:padding="32dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/app_logo"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnLoginFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/fb_icon"
            android:drawableStart="@drawable/fb_icon"
            android:text="@string/label_login_facebook"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_signup"
            android:layout_gravity="center"
            android:padding="16dp"
            android:textColor="@color/blue_facebook"
            android:textAllCaps="false"
            style="@style/Base.Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        android:src="@drawable/footer_logo"/>

</RelativeLayout>