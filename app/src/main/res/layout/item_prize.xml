<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llMainBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/vencedor_premio_impar">

        <ImageView
            android:id="@+id/ivIcPrize"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="32dp"
            android:src="@drawable/viaje_disney"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="32dp"
            android:paddingBottom="32dp"
            android:paddingRight="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPrizeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="VIAJE A DISNEY"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textColor="@color/vencedor_light_blue"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/tvPrizeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Una historia de magia y diversión familiar en, nada más y nada menos que Magic Kingdom."
                android:textSize="12sp"
                android:textColor="@color/vencedor_light_blue"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>